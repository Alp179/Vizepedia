{
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ],
  "redirects": [
    {
      "source": "http://vizepedia.com/(.*)",
      "destination": "https://www.vizepedia.com/$1",
      "permanent": true,
      "statusCode": 301
    },
    {
      "source": "https://vizepedia.com/(.*)", 
      "destination": "https://www.vizepedia.com/$1",
      "permanent": true,
      "statusCode": 301
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/generate-sitemap",
      "schedule": "0 3 * * *"
    }
  ]
}